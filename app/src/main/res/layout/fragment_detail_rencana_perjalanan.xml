<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".detail_rencana_perjalanan"
    android:orientation="vertical">

    <Button
        android:id="@+id/kembali"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kembali"
        android:layout_margin="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceListItem"
            android:text="Anggaran : "
            android:paddingLeft="10dp"/>
        <TextView
            android:id="@+id/text7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kota "
            android:textAppearance="?attr/textAppearanceListItem"
            android:paddingLeft="10dp"/>

        <LinearLayout
            android:id="@+id/plan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="30dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/wisata1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="wisata 1"
                    android:textSize="8pt"
                    android:background="@drawable/rounded_background"
                    android:layout_gravity="center"
                    android:padding="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="wisata 2"
                    android:textSize="8pt"
                    android:background="@drawable/rounded_background"
                    android:layout_marginTop="30dp"
                    android:layout_gravity="center"
                    android:padding="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="wisata 3"
                    android:textSize="8pt"
                    android:background="@drawable/rounded_background"
                    android:layout_marginTop="30dp"
                    android:layout_gravity="center"
                    android:padding="10dp"/>
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_launcher"
                android:layout_gravity="right"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/plan"
            android:weightSum="1">
            <TextView
                android:id="@+id/ratingrecanaperjalanan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rating_rencana_tersimpan"
                android:background="@drawable/rounded_background"
                android:layout_gravity="center"
                android:padding="10dp"
                android:layout_weight="0.48"
                android:layout_marginHorizontal="10dp"/>
            <Button
                android:id="@+id/btn_beri_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/beri_rating"
                android:layout_weight="0.48"
                android:layout_marginHorizontal="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <Button
                android:id="@+id/btntambahobjekwisata"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Informasi Objek Wisata"
                android:layout_marginRight="5dp"/>
            <Button
                android:id="@+id/btn2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Membuat Rencana Perjalanan"
                android:layout_toLeftOf="@id/btntambahobjekwisata"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>